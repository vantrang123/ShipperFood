<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient android:angle="270" android:centerColor="#AA000000" android:endColor="#00000000" android:startColor="#000000" android:type="linear" />
                </shape>
            </item>
            <item android:bottom="6dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorWhite" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient android:angle="90" android:centerColor="#55000000" android:endColor="#00000000" android:startColor="#AA000000" android:type="linear" />
                </shape>
            </item>
            <item android:top="10dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorWhite" />
                    <corners android:topLeftRadius="20dp" android:topRightRadius="20dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>